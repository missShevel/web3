{
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": ["sonarjs", "svelte3"],
  "overrides": [
    {
      "files": ["*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ],
  "extends": ["eslint:recommended", "plugin:sonarjs/recommended"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "requireConfigFile": false
  },
  "rules": { "no-undef": "off" },
  "ignorePatterns": ["/public/build/*.js"],
  "parser": "@babel/eslint-parser"
}
